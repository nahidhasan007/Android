<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.core.content.ContextCompat" />

        <import type="net.sharetrip.b2b.util.UtilsOperationKt" />

        <variable
            name="changeTicketDetails"
            type="net.sharetrip.b2b.view.flight.history.model.ChangeTicket" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/center_vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_code"
                android:textColor="@color/dark_variant"
                android:textSize="@dimen/font_tiny"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_booking_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_tiny"
                android:fontFamily="sans-serif-medium"
                android:text="@{changeTicketDetails.bookingHistory.bookingCode}"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_small"
                app:layout_constraintEnd_toEndOf="@+id/center_vertical_guideline"
                app:layout_constraintStart_toStartOf="@+id/label_booking_id"
                app:layout_constraintTop_toBottomOf="@+id/label_booking_id"
                tools:text="ST862149990 " />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_request_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_type"
                android:textColor="@color/dark_variant"
                android:textSize="@dimen/font_tiny"
                app:layout_constraintStart_toStartOf="@id/center_vertical_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_request_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_tiny"
                android:fontFamily="sans-serif-medium"
                android:text="@{changeTicketDetails.requestType}"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/center_vertical_guideline"
                app:layout_constraintTop_toBottomOf="@+id/label_booking_id"
                tools:text="change" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_request_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/request_code"
                android:textColor="@color/dark_variant"
                android:textSize="@dimen/font_tiny"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_booking_code" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_request_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_tiny"
                android:fontFamily="sans-serif-medium"
                android:text="@{changeTicketDetails.uuid}"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_small"
                app:layout_constraintEnd_toEndOf="@+id/center_vertical_guideline"
                app:layout_constraintStart_toStartOf="@+id/label_request_code"
                app:layout_constraintTop_toBottomOf="@+id/label_request_code"
                tools:text="CHANGE-5EEF3D8B1D79A " />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/status"
                android:textColor="@color/dark_variant"
                android:textSize="@dimen/font_tiny"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_request_code" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_tiny"
                android:fontFamily="sans-serif-medium"
                android:text="@{changeTicketDetails.requestStatus.toUpperCase()}"
                android:textColor="@{UtilsOperationKt.getRequestStatusColor(context, changeTicketDetails.requestStatus)}"
                android:textSize="@dimen/font_small"
                app:layout_constraintEnd_toEndOf="@+id/center_vertical_guideline"
                app:layout_constraintStart_toStartOf="@+id/label_request_code"
                app:layout_constraintTop_toBottomOf="@+id/label_status"
                tools:text="CHANGE-5EEF3D8B1D79A " />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>