<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="airport"
            type="net.sharetrip.b2b.view.flight.booking.model.Airport" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/code_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{airport.iata}"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/dark"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DAC" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="@{airport.name}"
            android:textSize="@dimen/font_small"
            android:textColor="@color/dark"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="@+id/code_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/code_text_view"
            app:layout_constraintTop_toTopOf="@+id/code_text_view"
            tools:text="Dhaka, Hazrat Shahjalal International Airport (DAC)" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>