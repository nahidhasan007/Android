<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tex_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:drawablePadding="@dimen/spacing_normal"
            app:drawableStartCompat="@drawable/ic_baseline_clear_24"
            app:drawableTint="@color/dark"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Select your choice" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tex_title"
            tools:listitem="@layout/item_option"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
