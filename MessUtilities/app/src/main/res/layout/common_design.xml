<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="net.sharetrip.hotel.booking.view.main.HotelBookingMainViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        tools:context="net.sharetrip.ui.flights.booking.view.roundtrip.RoundTripFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hotelFieldCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="16dp"
                app:strokeColor="#EBF0F5"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/search_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hotel_sheet_background"
                    android:paddingTop="@dimen/spacing_normal"
                    android:paddingBottom="@dimen/spacing_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hotelParameterCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/common_radius_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="#EBF0F5"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/hotelCode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/hotel_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/itemLineView2"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="10dp"
                                android:background="#D8E1EB"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/layout_destination_city"
                                app:layout_constraintStart_toEndOf="@id/hotelCode"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_destination_city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="@{() -> viewModel.onClickDestination()}"
                                android:padding="@dimen/spacing_small"
                                app:layout_constraintBottom_toBottomOf="@+id/hotelCode"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/itemLineView2"
                                app:layout_constraintTop_toTopOf="@+id/hotelCode">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_level_destination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/enter_a_city_or_property"
                                    android:textColor="#3E4957"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_destination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="@{viewModel.destination}"
                                    android:textColor="#5A6573"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/text_level_destination"
                                    tools:text="Singapore" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/checkInCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/common_radius_background"
                        app:layout_constraintEnd_toEndOf="@id/hotelParameterCardView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/hotelParameterCardView"
                        app:strokeColor="#EBF0F5"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:background="#F5F7FA"
                                android:gravity="center"
                                android:text="@{viewModel.checkInDay}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="28" />

                            <View
                                android:id="@+id/itemLineView3"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="10dp"
                                android:background="#D8E1EB"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/layout_checkIn"
                                app:layout_constraintStart_toEndOf="@id/date"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_checkIn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:onClick="@{() -> viewModel.onClickCheckInDate()}"
                                android:padding="@dimen/spacing_small"
                                app:layout_constraintBottom_toBottomOf="@+id/date"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/itemLineView3"
                                app:layout_constraintTop_toTopOf="@+id/date">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/checkInDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/check_in_date"
                                    android:textColor="#3E4957"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/dayAndMonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="@{viewModel.checkInDayMonth}"
                                    android:textColor="#5A6573"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/checkInDate"
                                    tools:text="October, Sunday" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/checkOutCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/common_radius_background"
                        app:layout_constraintEnd_toEndOf="@id/checkInCardView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/checkInCardView"
                        app:strokeColor="#EBF0F5"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/checkOutDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:background="#F5F7FA"
                                android:gravity="center"
                                android:text="@{viewModel.checkOutDay}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="02" />

                            <View
                                android:id="@+id/itemLineView4"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="10dp"
                                android:background="#D8E1EB"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/layout_checkOut"
                                app:layout_constraintStart_toEndOf="@id/checkOutDate"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_checkOut"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:onClick="@{() -> viewModel.onClickDateRange()}"
                                android:padding="@dimen/spacing_small"
                                app:layout_constraintBottom_toBottomOf="@+id/checkOutDate"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/itemLineView4"
                                app:layout_constraintTop_toTopOf="@+id/checkOutDate">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/checkOutDateText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/check_out_date"
                                    android:textColor="#3E4957"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/checkoutDayAndMonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="@{viewModel.checkOutDayMonth}"
                                    android:textColor="#5A6573"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/checkOutDateText"
                                    tools:text="November, Tuesday" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/GuestCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/common_radius_background"
                        app:layout_constraintEnd_toEndOf="@id/checkOutCardView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/checkOutCardView"
                        app:strokeColor="#EBF0F5"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/numberOfGuests"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:gravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/passenger_icon" />

                            <View
                                android:id="@+id/itemLineView5"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="10dp"
                                android:background="#D8E1EB"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/layout_guest"
                                app:layout_constraintStart_toEndOf="@id/numberOfGuests"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_guest"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:onClick="@{() -> viewModel.onClickTravellers()}"
                                android:padding="@dimen/spacing_small"
                                app:layout_constraintBottom_toBottomOf="@+id/numberOfGuests"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/itemLineView5"
                                app:layout_constraintTop_toTopOf="@+id/numberOfGuests">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/guestAndRooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Guests &amp; Rooms"
                                    android:textColor="#3E4957"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/numberOfRooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="@{viewModel.travellerAndRoomData}"
                                    android:textColor="#5A6573"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/guestAndRooms"
                                    tools:text="1 Room" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/searchBtnLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/common_button_radius_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> viewModel.onClickSearchHotel()}"
                        android:padding="@dimen/spacing_small"
                        app:layout_constraintEnd_toEndOf="@+id/GuestCardView"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/GuestCardView"
                        app:layout_constraintTop_toBottomOf="@+id/GuestCardView">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/searchIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="112dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/search_icon"
                            android:textColor="#3E4957"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/SearchButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Search Hotels"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/searchIcon"
                            app:layout_constraintStart_toEndOf="@+id/searchIcon"
                            app:layout_constraintTop_toTopOf="@+id/searchIcon"
                            app:layout_constraintVertical_bias="0.333" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:background="@color/white"
                android:visibility="@{viewModel.isFlightPromotionAvailable ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hotelFieldCardView"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_steps_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:fontFamily="sans-serif"
                    android:text="@{viewModel.position}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_bonus_trip_coin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_view_bonus_trip_coin"
                    tools:text="1/5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_tiny"
                    android:fontFamily="sans-serif"
                    android:text="@string/steps"
                    android:textColor="#99000000"
                    android:textSize="@dimen/font_small"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_steps_count"
                    app:layout_constraintStart_toEndOf="@+id/text_view_steps_count"
                    app:layout_constraintTop_toTopOf="@+id/text_view_steps_count"
                    tools:text="Steps" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:fontFamily="sans-serif"
                    android:text="@string/bonus_tripcoin"
                    android:textColor="#99000000"
                    android:textSize="@dimen/font_small"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_bonus_trip_coin"
                    app:layout_constraintEnd_toStartOf="@+id/text_view_bonus_trip_coin"
                    app:layout_constraintTop_toTopOf="@+id/text_view_bonus_trip_coin"
                    tools:text="Bonus TripCoin" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_bonus_trip_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:drawablePadding="@dimen/spacing_tiny"
                    android:fontFamily="sans-serif-medium"
                    android:text="@{String.valueOf(viewModel.bonusPoint)}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium_large"
                    app:drawableLeftCompat="@drawable/ic_tripcoin_color_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="20" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_tour_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_bonus_trip_coin"
                    tools:listitem="@layout/item_trip_wish_list" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_banner_promotions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_small"
                android:visibility="@{viewModel.isFlightPromotionAvailable ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="@dimen/spacing_tiny"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hotelFieldCardView"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    app:loadImageWithGlide="@{viewModel.promotionalImage}" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
