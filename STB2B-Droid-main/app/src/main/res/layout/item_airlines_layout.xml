<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="net.sharetrip.b2b.R" />

        <variable
            name="viewModel"
            type="net.sharetrip.b2b.view.flight.booking.model.Airline" />

        <variable
            name="selectedCode"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_airline"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            android:loadImageBinder='@{"https://tbbd-flight.s3.ap-southeast-1.amazonaws.com/airlines-logo/"+viewModel.code+".png"}'
            android:padding="@dimen/spacing_tiny"
            android:placeholder="@{R.mipmap.ic_launcher_round}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher_round" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_airline_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_tiny"
            android:layout_marginTop="@dimen/spacing_tiny_big"
            android:text='@{viewModel.code}'
            android:textAllCaps="true"
            android:textColor="@color/dark"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/image_view_airline"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="QZ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_airline_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny_big"
            android:text='@{""+viewModel.records+" Flights"}'
            android:textColor="@color/greyish_brown"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_view_airline_code"
            app:layout_constraintTop_toBottomOf="@id/text_view_airline_code"
            tools:text="2 Flights" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/selfBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/background_transparent_with_blue_stroke"
            android:visibility="@{selectedCode.equals(viewModel.code) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_airline_count"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>