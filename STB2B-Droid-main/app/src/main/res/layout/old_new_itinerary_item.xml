<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reviewSection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reviewChanges"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Review Change : 1st flight"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/total_changes"
                style="@style/HelperTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints"
                tools:text="2 Changes" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/beforeDateChange"
            android:backgroundTint="#F5F7FA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quotation_common"
            app:layout_constraintTop_toBottomOf="@id/reviewSection1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="216dp" />


            <TextView
                android:id="@+id/from"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/from"
                app:layout_constraintBottom_toTopOf="@+id/locationFrom"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/to"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/to"
                app:layout_constraintBaseline_toBaselineOf="@+id/from"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                tools:ignore="NotSibling" />


            <TextView
                android:id="@+id/journeyDate"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/date"
                app:layout_constraintBaseline_toBaselineOf="@+id/to"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                tools:ignore="NotSibling" />


            <TextView
                android:id="@+id/locationFrom"
                style="@style/TitleTextBoldBlackStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/airportFrom"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/from"
                app:layout_constraintTop_toBottomOf="@+id/from"
                tools:text="Dhaka" />

            <TextView
                android:id="@+id/locationTo"
                style="@style/TitleTextBoldBlackStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/locationFrom"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/to"
                tools:text="New York" />


            <TextView
                android:id="@+id/journeyDayTime"
                style="@style/TitleTextBoldBlackStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:ellipsize="end"
                android:textColor="#EF5550"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/locationTo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/journeyDate"
                tools:text="18.40 MON" />


            <TextView
                android:id="@+id/airportFrom"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/locationFrom"
                app:layout_constraintTop_toBottomOf="@+id/locationFrom"
                tools:text="DAC,Hazrat..." />

            <TextView
                android:id="@+id/airportTo"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/airportFrom"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/locationTo"
                tools:text="JFK,John F..." />

            <TextView
                android:id="@+id/date"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                app:layout_constraintBaseline_toBaselineOf="@+id/airportTo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/journeyDayTime"
                tools:text="15 Dec,2022" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/airlineImg"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/airportFrom"
                app:layout_constraintTop_toBottomOf="@+id/airportFrom"
                app:layout_constraintVertical_bias="1.0"
                tools:src="@drawable/shimmer_image_view" />

            <TextView
                android:id="@+id/airlineName"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/airlineImg"
                app:layout_constraintTop_toBottomOf="@id/airportFrom"
                tools:text="Biman Bangladesh Airlines" />

            <TextView
                android:id="@+id/flightNoTxt"
                android:layout_width="44dp"
                android:layout_height="13dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/flight_no"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/flightNo"
                app:layout_constraintStart_toEndOf="@id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/date"
                tools:text="Flight No" />

            <TextView
                android:id="@+id/flightNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#EF5550"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/flightNoTxt"
                app:layout_constraintTop_toBottomOf="@id/date"
                tools:text="6R0K5C" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beforeDateChange"
        app:layout_constraintEnd_toEndOf="parent"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/afterDateChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_quotation_common"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="216dp" />


            <TextView
                android:id="@+id/from2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/from"
                app:layout_constraintBottom_toTopOf="@+id/locationFrom"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewSection"
                app:layout_constraintVertical_chainStyle="spread"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/to2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/to"
                app:layout_constraintBaseline_toBaselineOf="@+id/from2"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                tools:ignore="NotSibling" />


            <TextView
                android:id="@+id/journeyDate2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:text="@string/date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="NotSibling" />


            <TextView
                android:id="@+id/locationFrom2"
                style="@style/TitleTextBoldBlackStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/airportFrom2"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/from2"
                app:layout_constraintTop_toBottomOf="@+id/from2"
                tools:text="Dhaka" />

            <TextView
                android:id="@+id/locationTo2"
                style="@style/TitleTextBoldBlackStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/locationFrom2"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintStart_toStartOf="@+id/to2"
                tools:text="New York" />


            <TextView
                android:id="@+id/journeyDayTime2"
                style="@style/TitleTextBoldBlackStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="end"
                android:textColor="#03A629"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/locationTo2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/journeyDate2"
                tools:text="18.40 MON" />


            <TextView
                android:id="@+id/airportFrom2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/locationFrom2"
                app:layout_constraintTop_toBottomOf="@+id/locationFrom2"
                tools:text="DAC,Hazrat..." />

            <TextView
                android:id="@+id/airportTo2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/airportFrom2"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintStart_toStartOf="@+id/locationTo2"
                tools:text="JFK,John F..." />

            <TextView
                android:id="@+id/date2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                app:layout_constraintBaseline_toBaselineOf="@+id/airportTo2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/journeyDayTime2"
                tools:text="15 Dec,2022" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/airlineImg2"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/airportFrom2"
                app:layout_constraintTop_toBottomOf="@+id/airportFrom2"
                app:layout_constraintVertical_bias="1.0"
                tools:src="@drawable/shimmer_image_view" />

            <TextView
                android:id="@+id/airlineName2"
                style="@style/TitleTextRegularStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/airlineImg2"
                app:layout_constraintTop_toBottomOf="@id/airportFrom2"
                tools:text="Biman Bangladesh Airlines" />


            <TextView
                android:id="@+id/flightNoText"
                android:layout_width="44dp"
                android:layout_height="13dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/flight_no"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/date2"
                tools:text="Flight No" />

            <TextView
                android:id="@+id/flightNo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#03A629"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/flightNoText"
                app:layout_constraintTop_toBottomOf="@id/date2"
                tools:text="6R0K5C" />



        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
