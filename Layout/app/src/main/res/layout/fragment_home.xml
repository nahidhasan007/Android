<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/Google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawborder"
                android:drawableStart="@drawable/ic_baseline_link"
                android:text="@string/sign_in_with_google"
                android:textAlignment="center"
                android:textSize="24sp">
            </TextView>

            <TextView
                android:id="@+id/fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_baseline_link"
                android:text="   Sign in with Facebook"
                app:layout_constraintTop_toBottomOf="@id/Google"
                app:layout_constraintEnd_toEndOf="@id/Google"
                app:layout_constraintStart_toStartOf="@id/Google"
                android:textAlignment="center"
                android:textSize="24sp">
            </TextView>

            <TextView
                android:id="@+id/apple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_baseline_link"
                android:text="   Sign in with Apple"
                app:layout_constraintTop_toBottomOf="@id/fb"
                app:layout_constraintEnd_toEndOf="@id/fb"
                app:layout_constraintStart_toStartOf="@id/fb"
                android:textAlignment="center"
                android:textSize="24sp">
            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>