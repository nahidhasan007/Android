<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShareTripB2B.Base.Widget.MaterialComponents.TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="boxBackgroundMode">none</item>
        <item name="boxBackgroundColor">@color/mtrl_filled_background_color</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox
        </item>
    </style>

    <style name="customButton">
        <item name="android:background">@drawable/blue_rounded_shape_selected</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="IndigoButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:background">@drawable/indigo_button_ripple_enable</item>
    </style>

    <style name="headlineLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RectangleWhiteButton" parent="android:style/Widget.Material.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:textColor">@color/primary</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@drawable/background_white_rounded_corner</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny_big</item>
    </style>

    <style name="CircularWhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/mtrl_circular_white_text_btn_text_color_selector</item>
        <item name="android:textColor">@color/mtrl_circular_white_text_btn_text_color_selector
        </item>
    </style>

    <style name="borderless_button" parent="Widget.AppCompat.Button.Borderless" />

    <style name="SCBSwitch" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="transparent_blue_button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/primary_variant</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary_variant</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/light</item>
        <item name="android:textColorSecondary">@color/light</item>

    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="BottomNavigationText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_material_button</item>
    </style>

</resources>
