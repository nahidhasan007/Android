<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="net.sharetrip.b2b.view.flight.booking.ui.passengerlist.PassengerListVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_variant"
        android:clickable="true"
        android:focusable="true"
        tools:context=".view.flight.booking.ui.passengerlist.PassengerListFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Checkout"
            app:titleTextColor="@color/light"
            app:navigationIcon="@drawable/ic_left_white_24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_passenger_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:textColor="@color/dark"
            android:textSize="@dimen/font_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/passenger_details"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_passenger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_margin="@dimen/spacing_normal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/label_passenger_detail"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            tools:listitem="@layout/item_passenger" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="@string/next_btn"
            android:gravity="center"
            android:background="@color/primary"
            android:textColor="@color/light"
            android:textStyle="bold"
            android:onClick="@{() -> viewModel.onClickNext()}"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
